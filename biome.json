{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": ["node_modules"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"recommended": true,
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": "error"
			},
			"complexity": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"noUselessElse": "warn",
				"noVar": "error"
			},
			"nursery": {
				"noUnusedImports": "error"
			}
		},

		"ignore": ["node_modules", "coverage", "dist", "build", "out", ".next"]
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 4,
			"lineWidth": 100,
			"lineEnding": "lf",
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"ignore": ["node_modules", "coverage", "dist", "build", "out", ".next"]
	}
}
